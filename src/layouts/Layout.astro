---
export interface Props {
	title?: string;
	description?: string;
}
const { title = 'Scholar Script Consult', description = 'Unlock your academic and professional potential with tailored consultation services.' } = Astro.props as Props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="stylesheet" href="/reset.css" />
		<link rel="stylesheet" href="/global.css" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
	</head>
	<body>
		<header class="site">
			<div class="container site-bar">
				<a href="/" class="brand">
					<img src="/logo.svg" alt="Scholar Script Consult logo" width="40" height="40" />
					<span>
						SCHOLAR SCRIPT<br/>
						<small>CONSULT</small>
					</span>
				</a>
				<button class="menu-toggle" type="button" aria-label="Toggle navigation" aria-expanded="false" data-menu-toggle>
					<svg width="26" height="26" viewBox="0 0 24 24" fill="none" aria-hidden="true">
						<path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
					</svg>
				</button>
				<nav class="main-nav" data-menu>
					<a href="#research">Research</a>
					<a href="#data">Data</a>
					<a href="#editing">Editing</a>
					<a href="#other">Other</a>
					<a href="#contact">Contact</a>
				</nav>
				<button class="nav-overlay" type="button" aria-hidden="true" tabindex="-1" data-menu-overlay></button>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<div class="container">
				<div style="display:flex;flex-wrap:wrap;gap:12px;align-items:center;justify-content:space-between;">
					<div>&copy; {new Date().getFullYear()} Scholar Script Consult.</div>
					<div class="muted">Academic, data, editing and professional services tailored to your needs.</div>
				</div>
			</div>
		</footer>
		<script is:inline>
			(function () {
				const toggle = document.querySelector('[data-menu-toggle]');
				const menu = document.querySelector('[data-menu]');
				const overlay = document.querySelector('[data-menu-overlay]');
				const links = menu ? menu.querySelectorAll('a') : [];

				if (!toggle || !menu) return;

				const closeMenu = () => {
					menu.classList.remove('is-open');
					document.body.classList.remove('nav-open');
					toggle.setAttribute('aria-expanded', 'false');
				};

				const openMenu = () => {
					menu.classList.add('is-open');
					document.body.classList.add('nav-open');
					toggle.setAttribute('aria-expanded', 'true');
				};

				toggle.addEventListener('click', () => {
					if (menu.classList.contains('is-open')) {
						closeMenu();
					} else {
						openMenu();
					}
				});

				if (overlay) {
					overlay.addEventListener('click', closeMenu);
				}

				links.forEach((link) => {
					link.addEventListener('click', closeMenu);
				});

				window.addEventListener('resize', () => {
					if (window.innerWidth >= 920) {
						closeMenu();
					}
				});
			})();
		</script>
	</body>
	<link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" as="style" />
</html>

